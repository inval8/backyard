<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Edit <%= log.name %></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/logs/<%= log._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="log[name]" value="<%= log.name %>">
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="number" name="log[price]" value="<%= log.price %>" min="0.01" step="0.01">-->
                <!--</div>-->
                <div class="form-group">
                    <input class="form-control" type="text" name="log[image]" value="<%= log.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="log[description]" value="<%= log.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/logs">Go Back</a>
        </div>
    </div>
    

<% include ../partials/footer %>