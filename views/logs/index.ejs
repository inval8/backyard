<% include ../partials/header %>

    <% if(currentUser && currentUser.isAdmin){ %>
        <h1>You're an admin</h1>
    <% }; %>
    
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
    <p>View our backyard-picked plants from around the city</p>
    <p>
        <a class="btn btn-primary btn-lrg" href="/logs/new">Add New Post</a>
    </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most prized plants</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% logs.forEach(function(log){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%=log.image%>">
                    <div class="caption">
                        <h4><%=log.name %></h4>
                    </div>
                    <p>
                        <a href="/logs/<%=log._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>